@page
@model RazorCourseDemo.Pages.Students.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Student.Name
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            Course
        </dt>
        <dd class="col-sm-10">
            @Model.Student.Course.Title
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            Course Credits
        </dt>
        <dd class="col-sm-10">
            @Model.Student.Course.Credits
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Student?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
